    "permissions": [
      { "role": "Raiyahub", "actions": ["read", "create", "update"] },
      { "role": "Melody", "actions": ["read", "create", "update"] },
      { "role": "AzFunction", "actions": ["read", "create", "update"] }
    ]
  },
  "campaigns": {
